<form method="post" action="{{ path('user_food_delete', {'id': food.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ food.id) }}">
    <h4><button class="label label-danger">Delete</button></h4>
</form>
