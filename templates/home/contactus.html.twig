{% extends 'homebase.html.twig' %}

{% block title %}Contact Us | {{ setting[0].title }} {% endblock %}
{% block keywords %}Contact Us | {{ setting[0].keywords }} {% endblock %}
{% block description %}Contact Us | {{ setting[0].description }} {% endblock %}

{% block body %}

    <!-- breadcrumb -->
    <div class="container">
        <ol class="breadcrumb w3l-crumbs">
            <li><a href=""><i class="fa fa-home"></i> Home</a></li>
            <li class="active">Contact FoodBox</li>
        </ol>
    </div>
    <!-- //breadcrumb -->

    <!-- contact -->
    <div id="contact" class="contact cd-section">
        <div class="container">
            <h3 class="w3ls-title">Contact us</h3>
            <p class="w3lsorder-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit sheets containing sed </p>
            <div class="contact-row agileits-w3layouts">
                <div class="col-xs-6 col-sm-6 contact-w3lsleft">
                    <div class="contact-grid agileits">
                        <h4> Send Message to Us </h4>
                        {{ include('messages.html.twig') }}
                        <form method="post" name="messages">

                            <label for="messages_name"></label><input type="text" id="messages_name" name="messages[name]" placeholder="Name" required="">
                            <label for="messages_email"></label><input type="email" id="messages_email" name="messages[email]" placeholder="Email" required="">
                            <label for="messages_message"></label><textarea id="messages_message" name="messages[message]" placeholder="Message..." required=""></textarea>
                            <div>
                                <input type="hidden" id="messages__token" name="messages[_token]" value="{{ csrf_token('form-message') }}" />
                            </div>
                            <input type="submit" value="Submit" >
{#                            <div id="contact-loading" class="alert alert-info form-alert">#}
{#                                <span class="icon"><i class="fa fa-info"></i></span>#}
{#                                <span class="message">Loading...</span>#}
{#                            </div>#}
{#                            <div id="contact-success" class="alert alert-success form-alert">#}
{#                                <span class="icon"><i class="fa fa-check"></i></span>#}
{#                                <span class="message">Success!</span>#}
{#                            </div>#}
{#                            <div id="contact-error" class="alert alert-danger form-alert">#}
{#                                <span class="icon"><i class="fa fa-times"></i></span>#}
{#                                <span class="message">Error!</span>#}
{#                            </div>#}
                        </form>
                    </div>
                </div>
                <div class="col-md-6 social-icons w3-agile-icons">
                    <h4>Keep in touch</h4>
                    <ul>
                        <li><a href="{{ setting[0].facebook }}" class="fa fa-facebook icon facebook"> </a></li>
                        <li><a href="{{ setting[0].twitter }}" class="fa fa-twitter icon twitter"> </a></li>
                    </ul>
                </div>
                <div class="col-xs-6 col-sm-6 contact-w3lsright">

                    <h6>{{ setting[0].contact |raw }}</h6>

                    <div class="address-row">
                        <div class="col-xs-2 address-left">
                            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        </div>

                        <div class="col-xs-10 address-right">
                            <h5>Visit Us</h5>
                            <p>{{ setting[0].address |raw }}</p>

                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="address-row w3-agileits">
                        <div class="col-xs-2 address-left">
                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                        </div>
                        <div class="col-xs-10 address-right">
                            <h5>Mail Us</h5>
                            <p><a href="mailto:firatatalay34@hotmail.com"> {{ setting[0].email |raw }}</a></p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="address-row">
                        <div class="col-xs-2 address-left">
                            <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
                        </div>
                        <div class="col-xs-10 address-right">
                            <h5>Call Us</h5>
                            <p>{{ setting[0].phone |raw }}</p>
                        </div>
                        <div class="clearfix"> </div>
                    </div>

                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <!-- map -->
        <div class="map agileits">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.948805392833!2d-73.99619098458929!3d40.71914347933105!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a27e2f24131%3A0x64ffc98d24069f02!2sCANADA!5e0!3m2!1sen!2sin!4v1479793484055"></iframe>
        </div>
        <!-- //map -->
    </div>
