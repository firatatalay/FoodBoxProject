{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }}'s Orders{% endblock %}

{% block body %}

<!-- breadcrumb -->
<div class="container">
    <ol class="breadcrumb w3l-crumbs">
        <li><a href=""><i class="fa fa-home"></i> Home</a></li>
        <li class="active">{{ app.user.name }}'s Orders</li>
    </ol>
</div>
<!-- //breadcrumb -->

<!-- products -->
<div class="products">
    <div class="container">
        <div class="col-md-9 product-w3ls-right">
            <div class="product-top">
                <h4><img src="{{ asset('uploads/images/' ~ app.user.image) }}" height="30" class="img-circle"> {{ app.user.name }} {{ app.user.surname }} orders</h4>
                <div class="clearfix"> </div>
            </div>
            <div class="products-row">
                <div class="col-xs-6 col-sm-12 product-grids">
                    <div>
                        <div class="flipper agile-products">
                            <div>


                                <h1>My Orders</h1>

                                <table class="table table-responsive">
                                    <thead>
                                    <tr>
                                        <th>Foodid</th>
                                        <th>Fooodid</th>
                                        <th>Ordertime</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Message</th>
                                        <th>Note</th>
                                        <th>Status</th>
                                        <th>Created_at</th>
                                        <th>Updated_at</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ordering in orderings %}
                                        <tr>

{#                                            <td>{{ ordering.rest }}</td>#}
                                            <td><a href="{{ path('food_show', {'id': ordering.foodid}) }}"> {{ ordering.rest }} </a> </td>

                                            <td>{{ ordering.food }}</td>
                                            <td>{{ ordering.ordertime ? ordering.ordertime|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>{{ ordering.quantity }}</td>
                                            <td>{{ ordering.total }}</td>
                                            <td>{{ ordering.message }}</td>
                                            <td>{{ ordering.note }}</td>
                                            <td>{{ ordering.status }}</td>
{#                                            <td>{{ ordering.createdAt ? ordering.createdAt|date('Y-m-d H:i:s') : '' }}</td>#}
{#                                            <td>{{ ordering.updatedAt ? ordering.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
                                            <td>
                                                <a href="{{ path('admin_ordering_show', {'id': ordering.id}) }}">show</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="18">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>



                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>

        {{ include('user/usermenu.html.twig') }}
    </div>
</div>
        {% endblock %}
