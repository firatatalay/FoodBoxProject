{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }}'s Profile{% endblock %}

{% block body %}

<!-- breadcrumb -->
<div class="container">
    <ol class="breadcrumb w3l-crumbs">
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">{{ app.user.name }} Profile</li>
    </ol>
</div>
<!-- //breadcrumb -->

<!-- products -->
<div class="products">
    <div class="container">
        <div class="col-md-9 product-w3ls-right">
            <div class="product-top">
                <h4><img src="{{ asset('uploads/images/' ~ app.user.image) }}" height="30" class="img-circle"> {{ app.user.name }} {{ app.user.surname }}</h4>
                <div class="clearfix"> </div>
            </div>
            <div class="products-row">
                <div class="col-xs-6 col-sm-12 product-grids">
                    <div>
                        <div class="flipper agile-products">
                            <div>
                                <table class="table table-responsive">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ app.user.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ app.user.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>Roles</th>
                                        <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Password</th>
                                        <td>{{ app.user.password }}</td>
                                    </tr>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ app.user.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Surname</th>
                                        <td>{{ app.user.surname }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        <td><img src="{{ asset('uploads/images/' ~ app.user.image) }}" height="60"></td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ app.user.status }}</td>
                                    </tr>
                                    <tr>
                                        <th>Updated_at</th>
                                        <td>{{ app.user.updatedAt ? app.user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Created_at</th>
                                        <td>{{ app.user.createdAt ? app.user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h4><a href="{{ path('user_edit', {'id': app.user.id}) }}"  class="label label-info">Edit Profile</a></h4>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>

        {{ include('user/usermenu.html.twig') }}
    </div>
</div>
        {% endblock %}
