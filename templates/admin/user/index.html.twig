{% extends 'adminbase.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}
    <!-- GALLERY BUTONU EKLEMEK ICIN GEREKLI OLAN SCRIPT  -->
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL,windowName,windowFeatures){ window.open(windowURL,windowName,windowFeatures); }
    </SCRIPT>



    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <!-- TABLO BAÅžLANGICI-->
                        <div class="map-data m-b-40">

                            <h4>User List</h4><br>
                            <a href="{{ path('admin_user_new') }}" class="btn btn-outline-success btn-sm" >Create a New User</a>
                            <br>
                            <br>
                            <table class="table table-responsive">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Email</th>
                                    <th>Roles</th>
{#                                    <th>Password</th>#}
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Image</th>
                                    <th>Status</th>
{#                                    <th>Updated_at</th>#}
{#                                    <th>Created_at</th>#}
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
{#                                        <td>{{ user.password }}</td>#}
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.surname }}</td>
                                        <td><img src="{{ asset('uploads/images/' ~ user.image) }}" height="40"></td>
                                        <td>{{ user.status }}</td>
{#                                        <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
{#                                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>#}
                                        <td>
                                            <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm">show</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm">edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="11">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>




                        </div>
                        <!-- TABLO SONU!-->
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
