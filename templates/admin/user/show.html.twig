{% extends 'adminbase.html.twig' %}

{% block title %}Show User{% endblock %}

{% block body %}
    <div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!-- TABLO BAÅžLANGICI-->
                    <div class="map-data m-b-40">
                        <h4>Show User</h4>
                        <br>
                        <table class="table table-responsive">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            </tr>
                            <tr>
                                <th>Password</th>
                                <td>{{ user.password }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ user.name }}</td>
                            </tr>
                            <tr>
                                <th>Surname</th>
                                <td>{{ user.surname }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td><img src="{{ asset('uploads/images/' ~ user.image) }}" height="40" alt=""></td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>{{ user.status }}</td>
                            </tr>
                                        <tr>
                                            <th>Updated_at</th>
                                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                        </tr>
                                        <tr>
                                            <th>Created_at</th>
                                            <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        </tr>
                            </tbody>
                        </table>
                        <table>
                            <div class="row">
                                <div class="">
                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm" >Edit</a>
                                </div>
                            </div>
                        </table>
                        <!-- TABLO SONU!-->
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}