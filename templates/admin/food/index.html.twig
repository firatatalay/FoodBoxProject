{% extends 'adminbase.html.twig' %}

{% block title %}Restaurant List{% endblock %}

{% block body %}
    <!-- GALLERY BUTONU EKLEMEK ICIN GEREKLI OLAN SCRIPT  -->
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL,windowName,windowFeatures){ window.open(windowURL,windowName,windowFeatures); }
    </SCRIPT>



    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <!-- TABLO BAÅžLANGICI-->
                        <div class="map-data m-b-40">

                            <h4>Restaurant List</h4>
<br>                        <a href="{{ path('admin_food_new') }}" class="btn btn-outline-success btn-sm" >Create a New Restaurant</a>
                            <br>
                            <br>
                            <table class="table table-responsive">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Category</th>
                                    <th>User</th>
                                    <th>Title</th>
{#                                    <th>Keywords</th>#}
{#                                    <th>Description</th>#}
                                    <th>Phone/City</th>
                                    <th>Image</th>
                                    <!--<th>Created_at</th>
                                    <th>Updated_at</th>-->
                                    <th>Gallery</th>
                                    <th>Foods</th>
                                    <th>Status</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for food in foods %}
                                    <tr>
                                        <td>{{ food.id }}</td>
                                        <td> {{ food.catname }}</td>
                                        <td><a href="{{ path('admin_user_show', {'id': food.userid}) }}">{{ food.name }} {{ food.surname }}</a> </td>
                                        <td><a href="{{ path('admin_food_show', {'id': food.id}) }}">{{ food.title }} </a> </td>
{#                                        <td>{{ food.keywords }}</td>#}
{#                                        <td>{{ food.description }}</td>#}
                                        <td> {{ food.phone }} / {{ food.city }}</td>
                                        <td><img src="{{ asset('uploads/images/' ~ food.image) }}" height="40"></td>



                                        <td>
                                        <a href="javascript:openWin('{{ path('admin_image_new',{'id' : food.id}) }}','','toolbar=no,location=no,directories=no,status=no,top=50,left=100,menuBar=no,scrollBar=yes,resizable=no,width=900,height=600'); ">
                                            <img src="{{ asset('assets/admin/images') }}/gallery.png" style="height:40px">
                                        </a>
                                        </td>
                                        <td>
                                        <a href="javascript:openWin('{{ path('admin_foood_new',{'id' : food.id}) }}','','toolbar=no,location=no,directories=no,status=no,top=50,left=100,menuBar=no,scrollBar=yes,resizable=no,width=900,height=600'); ">
                                            <img src="{{ asset('assets/admin/images') }}/food.png" style="height:40px">
                                        </a>
                                        </td>

                                        <td>{{ food.status }}</td>
                                        <td>
                                            <a href="{{ path('admin_food_show', {'id': food.id}) }}" class="btn btn-outline-primary btn-sm" >Show</a>

                                        </td>
                                        <td>

                                            <a href="{{ path('admin_food_edit', {'id': food.id}) }}" class="btn btn-outline-primary btn-sm" >Edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>



                        </div>
                        <!-- TABLO SONU!-->
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
