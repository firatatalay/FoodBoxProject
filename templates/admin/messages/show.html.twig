{% extends 'adminbase.html.twig' %}

{% block title %}Show Message{% endblock %}

{% block body %}

    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <!-- TABLO BAŞLANGICI-->
                        <div class="map-data m-b-40">
                            <h4>Show Message</h4>
                            <br>
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ message.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ message.name }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ message.email }}</td>
                                </tr>
                                <tr>
                                    <th>Message</th>
                                    <td>{{ message.message }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ message.status }}</td>
                                </tr>
                                <tr>
                                    <th>Ip</th>
                                    <td>{{ message.ip }}</td>
                                </tr>
                                <tr>
                                    <th>Note</th>
                                    <td>{{ message.note }}</td>
                                </tr>
                                <tr>
                                    <th>Created_at</th>
                                    <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Updated_at</th>
                                    <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('admin_messages_index') }}" class="btn btn-outline-success btn-sm">back to list</a>

                            <a href="{{ path('admin_messages_edit', {'id': message.id}) }}" class="btn btn-outline-success btn-sm">edit</a>

                            {{ include('admin/messages/_delete_form.html.twig') }}



                        </div>
                        <!-- TABLO SONU!-->
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
